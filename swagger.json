{
    "swagger": "2.0",
    "info": {
        "version": "1.0.0",
        "title": "Checkout Sun API"
    },
    "basePath": "/api/v1",
    "definitions": {
        "new_content": {
            "type": "object",
            "required": [
                "product_id",
                "name",
                "description",
                "quantity",
                "price",
                "tax",
                "currency"
            ],
            "properties": {
                "product_id": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "quantity": {
                    "type": "number",
                    "format": "double"
                },
                "price": {
                    "type": "number",
