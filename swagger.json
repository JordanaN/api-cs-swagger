{
    "swagger": "2.0",
    "info": {
        "version": "1.0.0",
        "title": "Checkout Sun API"
    },
    "basePath": "/api/v1",
    "paths": {
        "/content": {
            "post": {
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "description": "Criar Conteúdo - Cria um conteúdo no MyEduzz através de um produto do E-Commerce\n",
                "parameters": [
                    {
                        "name": "content",
                        "in": "body",
                        "description": "Conteúdo a ser criado no MyEduzz a partir de um e-commerce",
                        "schema": {
                            "required": [
                                "product_id",
                                "name",
                                "description",
                                "quantity",
                                "price",
                                "tax",
                                "currency"
                            ],
                            "properties": {
                                "product_id": {
                                    "type": "string"
                                },
                                "name": {
                                    "type": "string"
                                },
                                "description": {
                                    "type": "string"
                                },
                                "quantity": {
                                    "type": "number",
                                    "format": "double"
                                },
                                "price": {
                                    "type": "number",
                                    "format": "double"
                                },
                                "tax": {
                                    "type": "number",
                                    "format": "double"
                                },
                                "currency": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Response de sucesso",
                        "schema": {
                            "properties": {
                                "product_id": {
                                    "type": "string"
                                },
                                "content_id": {
                                    "type": "string"
                                },
                                "name": {
                                    "type": "string"
                                },
                                "description": {
                                    "type": "string"
                                },
                                "quantity": {
                                    "type": "number",
                                    "format": "double"
                                },
                                "price": {
                                    "type": "number",
                                    "format": "double"
                                },
                                "tax": {
                                    "type": "number",
                                    "format": "double"
                                },
                                "currency": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/contents": {
            "get": {
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "summary": "Retorna uma lista de conteúdos criado no MyEduzz pelo e-commerce",
                "parameters": [
                    {
                        "name": "Authorization",
                        "in": "header",
                        "type": "string",
                        "description": "bearer <acessToken>",
