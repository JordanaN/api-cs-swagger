                                "quantity": {
                                    "type": "number",
                                    "format": "double"
                                },
                                "price": {
                                    "type": "number",
                                    "format": "double"
                                },
                                "tax": {
                                    "type": "number",
                                    "format": "double"
                                },
                                "currency": {
                                    "type": "string"
                                }
                            }
                        }
